@model Models.Entities.Product.Product
@using Models
@{
    ViewData["Title"] = "افزودن ";
}


<head>
    <style>

        .hiddenn {
            display: none;
        }
    </style>
</head>



<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن محصول  جدید </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">افزودن محصول   جدید </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form action="/Admin/Products/Create" method="post" enctype="multipart/form-data">

        <input type="hidden"  value="@ViewData["UserName"]" asp-for="UserName"/>
        <input type="hidden"  value="@ViewData["UserId"]" asp-for="UserId"/>

        @Html.AntiForgeryToken()


        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-7">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات محصول    </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> عنوان  محصول </label>
                                        <input type="text" name="ProductTitle" class="form-control" id="exampleInputEmail1" placeholder="عنوان  محصول  را وارد کنید">
                                        @Html.ValidationMessageFor(model => model.ProductTitle, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> توضیح مختصر    </label>
                                        <input type="text" name="ShortDescription" class="form-control" id="exampleInputEmail1" placeholder="توضیح مختصر  را وارد کنید">
                                        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">توضیح کامل </label>
                                        <textarea type="email" name="LongDescription" class="form-control" id="LongDescription" placeholder="توضیح کامل را وارد کنید"></textarea>
                                        @Html.ValidationMessageFor(model => model.LongDescription, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        <label> نوع فروش این کالا   </label>
                                        <select id="VideoType" name="IsGroup" class="form-control" onchange="ChangeSelect()">
                                            <option selected>نوع فروش این کالا  را اتخاب  کنید </option>
                                            <option value="false">فروش به صورت خرد  </option>
                                            <option value="true">فروش به صورت عمده  </option>

                                        </select>
                                    </div>


                                    <div id="Aparat" class="hiddenn form-group ">
                                        <label for="exampleInputEmail1"> توضیح درباره ی کالا    </label>
                                        <input type="text" name="GroupDescription" class="form-control" id="exampleInputEmail1" placeholder="به عنوان مثال در هر بسته 200 عدد از این محصول وجود دارد ">
                                        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class = "text-danger" })

                                    </div>


                                    <div class="form-group">
                                        <label for="exampleInputPassword1"> قیمت     </label>
                                        <input type="number" name="Price" class="form-control" id="exampleInputPassword1" placeholder="قیمت محصول به ریال وارد شود   ">
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                                    </div>



                                    <div class="form-group">
                                        <label for="exampleInputPassword1"> تعداد موجودی    </label>
                                        <input type="number" name="ProductCount" class="form-control" id="exampleInputPassword1" placeholder="تعداد موجودی محصول را به عدد  وارد کنید  ">
                                        @Html.ValidationMessageFor(model => model.ProductCount, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">تگ ها  </label>
                                        <input type="text" name="Tags" class="form-control" id="exampleInputPassword1" placeholder="تگ ها را با - ار هم جدا کنید ">
                                        @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })

                                    </div>


                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success">ارسال</button>
                                    <a href="/Admin/Products/Index" class="btn btn-primary">بازگشت  </a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-5">
                        <!-- Horizontal Form -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">  تصویر  </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="form-horizontal">
                                <div class="card-body row">
                                    <img style="margin:auto; width:342px" id="imgAvatar" class="img-responsive rounded" src="~/Images/ProductImages/no-photo.png" alt="upload_img">
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="imageProduct" id="imgBlogUp">
                                            <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                        </div>

                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <!-- /.card-footer -->
                            </div>
                        </div>
                        <!-- /.card -->
                        <!-- general form elements disabled -->
                        <!-- /.card -->

                        <div class="hiddenn card card-info" id="WholeSale">
                            <div class="card-header">
                                <h3 class="card-title">تخفیف برای فروش عمده </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">تایین حداقل خرید برای در نظر گرفته شدن تخفیف (تنها  عدد وارد شود )  </label>
                                    <input type="number" name="WholeSaleCount" class="form-control" id="exampleInputEmail1" placeholder="مثال : به ازای خرید بیشتر از 20 بسته تخفیف در نظر گرفته می شود">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">درصد تخفیف (تنها عدد وارد شود )    </label>
                                    <input type="number" name="WholeSalePercent" class="form-control" id="exampleInputEmail1" placeholder="لطفا درصد تخفیف مورد نظر را وارد کنید ">
                                </div>

                            </div>
                            <!-- /.card-body -->


                        </div>



                    </div>

                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

@section Scripts
{


    <script>

        function ChangeSelect() {

            let e = document.getElementById("VideoType");
            let value = e.options[e.selectedIndex].value;


            if (value == "false") {

                document.getElementById("Aparat").classList.add('hiddenn');
                document.getElementById("WholeSale").classList.add('hiddenn');


            }
            else if (value == "true") {

                document.getElementById("Aparat").classList.remove('hiddenn');
                document.getElementById("WholeSale").classList.remove('hiddenn');



            }
            else {

                document.getElementById("Aparat").classList.add('hiddenn');
                document.getElementById("WholeSale").classList.add('hiddenn');

            }





        }



    </script>




    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgBlogUp").change(function () {
            readURL(this);
        });
    </script>


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('LongDescription', {
            customConfig: '/js/Config.js'
        });</script>



}

