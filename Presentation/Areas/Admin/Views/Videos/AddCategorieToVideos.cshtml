@model DataAccess.ViewModels.AddCategoryToVideosViewModel
@using Models.Entities.Blog;
@{ ViewData["Title"] = "افزودن  دسته بندی   ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    List<BlogCategory> BlogsCategories = ViewData["BlogsCategories"] as List<BlogCategory>; }

<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن دسته بندی   </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">افزودن دسته بندی   </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form asp-action="AddCategorieToVideos" asp-controller="Videos" asp-area="Admin" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="VideoId" />

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- Horizontal Form -->


                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">   دسته بندی ها    </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="form-horizontal">

                                <div class="form-group">
                                    <div class="form-check">

                                        @for (int i = 0; i < Model.SelectedVideoCategory.Count; i++)
                                        {
                                            <br />
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.SelectedVideoCategory[i].IsSelected" />
                                            <label class="form-check-label" style="margin-right: 30px;">@Model.SelectedVideoCategory[i].CategoryId</label>
                                            <label class="form-check-label" style="margin-right: 30px;">@Model.SelectedVideoCategory[i].CategoriName</label>

                                            <input type="hidden" asp-for="@Model.SelectedVideoCategory[i].CategoryId" />
                                        }
                                    </div>

                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-success">تایید </button>
                                        <a asp-action="Index" asp-controller="Videos" asp-area="Admin" class="btn btn-primary">بازگشت  </a>
                                    </div>

                                </div>                            <!-- /.card-footer -->
                            </div>
                        </div>
                        <!--/.col (right) -->
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgBlogUp").change(function () {
            readURL(this);
        });</script>

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('LongDescription', {
            customConfig: '/js/Config.js'
        });</script>

}

