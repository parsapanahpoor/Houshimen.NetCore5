
@model Models.Entities.Employee.Employee

@{ ViewData["Title"] = "ویرایش ";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }




<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>ورایش  کارمند    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">ویرایش  کارمند     </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form asp-action="Edit" asp-controller="Employees" asp-area="Admin" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="UserAvatar" />
        <input type="hidden" asp-for="EmployeeId" />



        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-7">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات کارمند     </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> نام کامل  کارمند      </label>
                                        <input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1" placeholder="نام کامل مارمند  را وارد کنید">
                                        <span asp-validation-for="UserName" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> سمت کارمند در شرکت     </label>
                                        <input type="text" asp-for="EmployeeLevel" class="form-control" id="exampleInputEmail1" placeholder="سمت کارمند  را وارد کنید">
                                        <span asp-validation-for="EmployeeLevel" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> توضیح درباره ی کارمند    </label>
                                        <textarea rows="2" asp-for="Description" class="form-control" id="exampleInputEmail1" placeholder="توضیح درباره ی را وارد کنید"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> لینک تصویر      </label>
                                        <input type="text" asp-for="PersonalLink" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر را وارد کنید">
                                        <span asp-validation-for="PersonalLink" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">  لینک صفحه ی مجازی اول       </label>
                                        <input type="text" asp-for="SocialMedia1" class="form-control" id="exampleInputEmail1" placeholder="لینک صفحه ی مجازی اول را وارد کنید">
                                        <span asp-validation-for="SocialMedia1" class="text-danger"></span>


                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> لینک صفحه ی مجازی دوم       </label>
                                        <input type="text" asp-for="SocialMedia2" class="form-control" id="exampleInputEmail1" placeholder="لینک صفحه ی مجازی دوم را وارد کنید">
                                        <span asp-validation-for="SocialMedia2" class="text-danger"></span>

                                    </div>


                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    @if (ViewData["Delete"] != null)
                                    {
                                        <a asp-action="Delete" asp-controller="Employees" asp-area="Admin" asp-route-id="@Model.EmployeeId" class="btn btn-danger">حذف</a>
                                        <a asp-action="Index" asp-controller="Employees" asp-area="Admin" class="btn btn-dark">بازگشت  </a>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary">ویرایش</button>
                                        <a asp-action="Index" asp-controller="Employees" asp-area="Admin" class="btn btn-dark">بازگشت  </a>
                                    }

                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-5">
                        <!-- Horizontal Form -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">  تصویر  </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="form-horizontal">
                                <div class="card-body row">
                                    <img style="margin:auto; width:342px" id="imgAvatar" class="img-responsive rounded" src="/Images/UserAvatar/@Model.UserAvatar" alt="upload_img">
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="imgBlogUp" id="imgBlogUp">
                                            <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                        </div>

                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <!-- /.card-footer -->
                            </div>
                        </div>
                        <!-- /.card -->
                        <!-- general form elements disabled -->
                        <!-- /.card -->



                    </div>

                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

@section Scripts
{
    <script>function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgBlogUp").change(function () {
            readURL(this);
        });</script>



}